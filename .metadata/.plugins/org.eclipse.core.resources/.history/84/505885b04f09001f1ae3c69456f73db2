server:
  port: 8081


spring:
  application:
    name: User-Service
  datasource:
    username: root
    password: root
    url: jdbc:mysql://localhost:3306/microservice
    driver-class-name: com.mysql.cj.jdbc.Driver
    
    
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    
    
    
