server:
  port: 8084
  
spring:
  application:
    name: API-GATEWAY
  cloud:
    gateway:
      mvc:
        routes:
        - id: USER-SERVICE
          uri: lb://USER-SERVICE
          predicates:
           - Path=/user/**
           
        - id: HOTEl-SERVICE
          uri: lb://HOTEL-SERVICE
          predicates:
           - Path=/hotel/**
           
           
        - id: RATING-SERVICE
          uri: lb://RATING-SERVICE
          predicates:
           - Path=/rating/**
        
       
         
 
eureka:
  instance:
    prefer-ip-address: true
  client:
    register-with-eureka: true
    fetch-registry: true
    